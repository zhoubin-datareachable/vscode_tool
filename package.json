{
  "name": "react-tool",
  "displayName": "react工具",
  "description": "react工具",
  "keywords": [
    "react工具"
  ],
  "publisher": "tudou",
  "version": "0.0.3",
  "engines": {
    "vscode": "^1.59.1"
  },
  "categories": [
    "Other"
  ],
  "icon": "images/icon.png",
  "activationEvents": [
    "onCommand:extension.addComponents",
    "onCommand:extension.showGitCommit"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.addComponents",
        "title": "新建组件"
      },
      {
        "command": "extension.showGitCommit",
        "title": "show git commit template",
        "icon": "$(octoface)"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "extension.addComponents",
          "group": "navigation"
        }
      ],
      "scm/title": [
        {
          "when": "scmProvider == git",
          "command": "extension.showGitCommit",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "properties": {
        "author_name": {
          "type": "string",
          "default": "admin",
          "description": "请输入用户名"
        },
        "GitCommitPlugin.ShowEmoji": {
          "type": "boolean",
          "default": true,
          "markdownDescription": "是否展现 `Emoji` 图标"
        }
      }
    },
    "snippets": [
      {
        "language": "javascript",
        "path": "./snippets/snippets.json"
      },
      {
        "language": "javascriptreact",
        "path": "./snippets/snippets.json"
      },
      {
        "language": "typescript",
        "path": "./snippets/snippets.json"
      },
      {
        "language": "typescriptreact",
        "path": "./snippets/snippets.json"
      },
      {
        "language": "typescript",
        "path": "./snippets/ts-snippets.json"
      },
      {
        "language": "typescriptreact",
        "path": "./snippets/ts-snippets.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "test-compile": "tsc -p ./",
    "test-watch": "tsc -watch -p ./",
    "pretest": "npm run test-compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.59.0",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "14.x",
    "eslint": "^7.27.0",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "glob": "^7.1.7",
    "mocha": "^8.4.0",
    "typescript": "^4.3.2",
    "vscode-test": "^1.5.2",
    "ts-loader": "^9.2.2",
    "webpack": "^5.38.1",
    "webpack-cli": "^4.7.0"
  },
  "license": "SEE LICENSE IN LICENSE.txt",
  "bugs": {
    "url": "https://github.com/zhoubin-datareachable/vscode-tool/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/zhoubin-datareachable/vscode-tool"
  },
  "homepage": "https://github.com/zhoubin-datareachable/vscode-tool/README.md"
}
